<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0004ff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="20dp"
            android:src="@drawable/panda_sign" />

        <ImageView
            android:id="@+id/ImageOne"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="250dp"
            android:src="@drawable/hudong_sign" />

        <ImageView
            android:id="@+id/ImageTwo"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x80"
            android:src="@drawable/person_sign" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/Banner"
                android:layout_width="match_parent"
                android:layout_height="180dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:background="#dad9da" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="熊猫播报"
                android:textColor="#003cff"
                android:textSize="30dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:background="#dad9da" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ImageVIewONe"
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/y200"
                    android:src="@drawable/tab_panda_eye_pressed"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:background="#dad9da" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="直播秀场"
                android:textColor="#003cff"
                android:textSize="30dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:background="#dad9da" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/Recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="直播中国"
                android:textColor="#003cff"
                android:textSize="30dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:background="#dad9da" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/Recycler1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:background="#dad9da" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="滚滚视频"
                android:textColor="#003cff"
                android:textSize="30dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:background="#dad9da" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/Recycler2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:background="#dad9da" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="精彩一刻"
                android:textColor="#003cff"
                android:textSize="30dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:background="#dad9da" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/Recycler3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>